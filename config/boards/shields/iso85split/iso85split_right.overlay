#include "iso85split.dtsi"

&xiao_serial {status="disabled";};

&xiao_spi {
    status="okay";
    cs-gpios = <&gpio1 12 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
    shifter: 595@0 {
        compatible = "zmk,gpio-595";
        status="okay";
        gpio-controller;
        spi-max-frequency=<200000>;
        reg = <0>;
        #gpio-cells=<2>;
        ngpios=<8>;
    };
};

&default_transform {
    col-offset = <6>;
};

&kscan0 {
    col-gpios = <&gpio1 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                <&gpio0 9 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                <&gpio0 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                <&shifter 7 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                <&shifter 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                <&shifter 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                <&shifter 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                <&shifter 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                <&shifter 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                <&shifter 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                <&shifter 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
};